@model Department

<h1 class="alert alert-danger text-center">Are you sure you want to delete this</h1>
<br />
<br />
<dl class="row">
	<dt class="col-2">@Html.DisplayNameFor(e=>e.Id)</dt>
	<dd class="col-10">@Html.DisplayFor(e=>e.Id)</dd>

	<dt class="col-2">@Html.DisplayNameFor(e=>e.FullName)</dt>
	<dd class="col-10">@Html.DisplayFor(e=>e.FullName)</dd>

	<dt class="col-2">@Html.DisplayNameFor(e=>e.Description)</dt>
	<dd class="col-10">@Html.DisplayFor(e=>e.Description)</dd>

</dl>
<br />
<h3>Department Employees</h3>
<ul>
	@foreach (var item in Model.Employees)
	{
		<li>@item.FullName ( @item.Position )</li>
	}
</ul>
<br />
<form method="post" asp-controller="Department" asp-action="DeleteCurrent">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-outline-danger">Delete</button>
</form>
<br />

<a asp-controller="Department" asp-action="GetIndexView" class="btn btn-outline-secondary mt-3">Back</a>