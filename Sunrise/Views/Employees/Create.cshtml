@section Scripts{
	<script>
		function AddImage() {
			const imageFile = document.getElementById('imageFormFile').files[0];
			const empImage = document.getElementById('empImage');

			if (imageFile) {
				empImage.src = window.URL.createObjectURL(imageFile);
				empImage.style.display = 'block';
			} else {
				empImage.style.display = 'none';
			}
		}
	</script>
}